<article class="tile is-ancestor is-flex-wrap-wrap" id="article_section">
    {{> filter }}

    <div class="tile is-flex-wrap-wrap flex-wrap pt-6 pr-5 pl-1">
        {{#if empty}}
            <p class = "is-size-1 has-text-centered has-text-white" id="emptyCat">There are no articles with that category!</p>
        {{else}}
            {{#each articles as |article|}}
                {{> article-info article data=article.article_id}}
            {{/each}}
        {{/if}}
    </div>

</article>